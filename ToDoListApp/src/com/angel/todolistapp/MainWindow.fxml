<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
	
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.angel.todolistapp.MainController">
	
	<left>
		<!-- <ListView fx:id="todoListView" onMouseClicked="#handleTodoItemSelected"> -->
		<ListView fx:id="todoListView">
		
		</ListView>	
	</left>
	<center>
		<VBox  style="-fx-background-color: white">
			<TextArea fx:id="detailsTextArea" VBox.vgrow="ALWAYS"/>	
			<HBox>
				<Label text="Due: " style="-fx-background-color: white">
					<font>
						<Font name="Times New Roman bold" size="20" />
					</font>
				</Label>
				<Label fx:id="dueDateLabel" style="-fx-background-color: white">
					<font>
						<Font name="Times New Roman bold" size="20" />
					</font>
				</Label>
			</HBox>
		</VBox>
	</center>
	
</BorderPane>
